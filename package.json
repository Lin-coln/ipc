{
  "name": "ipc",
  "type": "module",
  "version": "1.0.0",
  "author": "lin-coln",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "tsup",
    "test:peer1": "cross-env PORT=5001 tsx --tsconfig ./tsconfig.json ./scripts/test.ts",
    "test:peer2": "cross-env PORT=5002 tsx --tsconfig ./tsconfig.json ./scripts/test.ts"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./*": {
      "types": "./src/*.d.ts",
      "import": "./src/*.js",
      "require": "./src/*.cjs"
    }
  },
  "devDependencies": {
    "@types/node": "^22.7.9",
    "cross-env": "^7.0.3",
    "prettier": "^3.3.3",
    "tsup": "^8.3.5",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
  }
}
